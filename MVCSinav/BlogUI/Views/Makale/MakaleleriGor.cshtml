@model IEnumerable<DATA.Concrete.Makale>

@{
    ViewData["Title"] = "MakaleleriGor";
}

<h1 class="text-center">Makaleler</h1>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.OkumaSuresi)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.YayınTarihi)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.OkunmaSayisi)
            </th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@Html.DisplayFor(modelItem => item.Baslik)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.Icerik)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.OkumaSuresi)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.YayınTarihi)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.OkunmaSayisi)</td>
                <td class="text-center">
                    <a asp-action="MakaleOkuma" asp-controller="Makale" asp-route-id="@item.Id" class="btn btn-info">Detay'a Git</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Tablo hücrelerine hover efekti */
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    /* Zebra çizgili tablo arka planı */
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05);
    }

    /* Tablo hücrelerine gölge ve border ekleme */
    .table-bordered tbody tr:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border: 2px solid #dee2e6;
    }
</style>
