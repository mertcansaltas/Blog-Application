@model IEnumerable<DATA.Concrete.Makale>

@{
    ViewData["Title"] = "Liste";
}

<p>
    <a asp-controller="Makale" asp-action="Ekle" class="btn btn-warning">Makale Ekle</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OkumaSuresi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YayınTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OkunmaSayisi)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
                <td>@item.Icerik.Substring(0,50)...</td>
                <td>@Html.DisplayFor(modelItem => item.OkumaSuresi)</td>
                <td>@Html.DisplayFor(modelItem => item.YayınTarihi)</td>
                <td>@Html.DisplayFor(modelItem => item.OkunmaSayisi)</td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Tablo hücrelerine hover efekti */
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    /* Zebra çizgili tablo arka planı */
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05);
    }

    /* Tablo hücrelerine gölge ve border ekleme */
    .table-bordered tbody tr:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        border: 2px solid #000;
    }
</style>
